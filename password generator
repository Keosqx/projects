import random
symbols = '+-/=*&()^%$#@!~><?"{}qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890'
print('Нужно ввести длину генерируемого пароля или написать "выход" для выхода из протокола.')
while True:
    dlina = input('Введите число или "выход": ').lower()
    if dlina == "выход":
        print('Спасибо за использование.')
        break
    if str.isnumeric(dlina) == False:
        print('Нужно ввести число. Попробуйте еще раз.')
        continue
    dlina = int(dlina)
    password = ''
    for i in range(dlina):
        password += random.choice(symbols)
    print(f'Пароль: {password}')
